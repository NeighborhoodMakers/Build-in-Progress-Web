<% if @step.new_record? %>
    <!--Creating new Step-->
    <div class = "submitButtons" > 
        <%= link_to 'Back', project_steps_path(@project, :exit_editing_step_id => @step.id), :class => "btn btn-small btn-back" %>
        <%= f.submit :class => "btn btn-small btn-primary update_step_button" %>
    </div>
<% else %>
    <!--Editing an existing step-->
    <div class="deleteButton">
      <%=link_to "Delete Step", {:controller => :steps, :action => 'destroy'}, :method => :delete, :confirm=>  "Are you sure you want to delete this step?", :class => "btn btn-small btn-danger"%>
    </div>
    <div class = "submitButtons" > 
      <%= link_to 'Back', project_steps_path(@project, :exit_editing_step_id => @step.id), :class => "btn btn-small btn-back" %>
      <%= f.submit 'Update Step', :class => "btn btn-small btn-primary update_step_button" %>
    </div>
<% end %>