<% # Format the author byline for projects show on the site%>
<% num_users = project.users.count %>
<% project.users.order("username ASC").each_with_index do |user, index| -%>
    <% if num_users > 2 && index == num_users-1 %> , and <% end -%><%= link_to user.username, user_path(user), :class=> "author_link" %><% if num_users == 2 && index == 0 %> and <% elsif num_users > 2 && index != num_users-2 && index != num_users-1 -%> , <% end -%>
<% end -%>
<% if source == "remix" -%>
	<script type="text/javascript">
		$('.author_link').addClass('remix_project_author');
		$('.author_link').removeClass('.author_link');
	</script>
<% end -%>