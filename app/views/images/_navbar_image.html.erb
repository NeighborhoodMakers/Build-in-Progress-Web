<% # show the user's avatar %>
<% if activity.key != "project.feature" and activity.key != "project.feature_public"%>
	<% if !activity.owner.avatar.blank? %>
		<%= image_tag(activity.owner.avatar_url(:thumb), :class=>"img-polaroid")%>
	<% else %>
		<%= image_tag("default_avatar.png", :class=>"img-polaroid")%>
	<% end %>
<% else %>
	<%= image_tag(activity.trackable.default_image.image_path_url(:square_thumb), :class=>"img-polaroid")%>
<% end %>