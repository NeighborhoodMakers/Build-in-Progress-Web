<div class ="collection">
	<% #show default image for project overview if the project has an image uploaded %>
	<div class="exploreImage-wrapper">
		<% if collection.projects.published.length != 0 && !collection.projects.published.order(:updated_at).last.default_image.nil? %>
			<%= link_to image_tag(collection.projects.published.order(:updated_at).last.default_image.image_path_url(:preview), :width=>"100%"), collection %>
			<% if collection.projects.published.length != 0 && !collection.image.blank? %>
				<%= link_to image_tag(collection.image_url(:preview), :width=>"30%", :class=>"img-polaroid mini-col-avatar"), collection %>
			<% end %>
		<% elsif collection.projects.published.length != 0 && !collection.image.blank? %>
			<%= link_to image_tag(collection.image_url(:preview), :width=>"100%"), collection %>
		<% else %>
			<%= link_to image_tag("default_collection_large.png", :width=>"100%"), collection %>
		<% end %>

		<% if collection.challenge==true %>
			<div class='challengeRibbon'>challenge</div>
		<% end %>

	</div>

	<div class="name"><%=link_to collection.name, collection %> </div>
	<div class="author"><%= collection.projects.count %> <i class="fa fa-folder-open" style="color:gray;"></i> &nbsp;|&nbsp; <%= link_to collection.user.username, user_path(collection.user.username) %> </div>
	
</div>
